<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <ImageView
        android:background="@color/material_blue_grey_800"
        android:layout_margin="2dp"
        android:src="@drawable/aos4"
        android:id="@+id/header"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_below="@id/header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/aos1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@android:color/white"
                android:layout_gravity="bottom|center"
                android:text="Hola!"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image3"
                android:scaleType="fitXY"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/aos2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:layout_alignBottom="@+id/image3"
                android:text="Hola 2!"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignBottom="@+id/image3"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/darker_gray"
                android:text="Descripcion"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


    <View
        android:layout_below="@+id/first_row"
        android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_below="@+id/first_row"
        android:layout_toRightOf="@+id/strut"
        android:id="@+id/image4"
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:src="@drawable/aos5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_alignRight="@+id/image4"
        android:layout_alignLeft="@+id/image4"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/image4"
        android:text="Hola 4!"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_alignRight="@+id/image4"
        android:layout_alignLeft="@+id/image4"
        android:layout_alignBottom="@+id/image4"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/darker_gray"
        android:text="Descripcion 4"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_below="@+id/first_row"
        android:layout_toLeftOf="@+id/strut"
        android:id="@+id/image5"
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:src="@drawable/aos6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_alignRight="@+id/image5"
        android:layout_alignLeft="@+id/image5"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/image5"
        android:text="Hola 5!"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_alignRight="@+id/image5"
        android:layout_alignLeft="@+id/image5"
        android:layout_alignBottom="@+id/image5"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/darker_gray"
        android:text="Descripcion 5"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>