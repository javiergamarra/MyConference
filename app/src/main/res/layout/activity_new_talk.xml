<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nhpatt.myconference.activities.NewTalkActivity">

    <TextView
        android:id="@+id/header_new_talk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_talk" />

    <EditText
        android:id="@+id/title_new_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_new_talk" />

    <TextView
        android:id="@+id/room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_new_talk" />

    <Button
        android:id="@+id/save_new_talk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/room"
        android:text="@string/save_new_talk"
        android:textAllCaps="true" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.nhpatt.myconference.fragments.DetailTalkFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/save_new_talk" />

</RelativeLayout>
